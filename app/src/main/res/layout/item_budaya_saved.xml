<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:paddingVertical="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_budaya_saved"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/reog"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/circular10p"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_title_saved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reog Ponorogo"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/grey_primary"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/btn_delete_saved"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_backspace_24"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_lokasi_saved"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lokasi"
                android:textSize="18sp"
                android:textColor="@color/grey_primary"/>
            <TextView
                android:id="@+id/txt_desc_saved"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_Short"
                android:textSize="18sp"
                android:textColor="@color/grey_primary"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>